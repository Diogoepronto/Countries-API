<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Class="ProjetoFinal_Paises.MainWindow"
    mc:Ignorable="d"
    Title="Countries API" Height="750" Width="1000" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <SolidColorBrush Color="White" />
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <!--COLUMN COUNTRY LIST-->
        <!--LIST COUNTRIES-->
        <ListBox x:Name="listBoxPaises" Grid.Column="1" Grid.Row="1" SelectionChanged="listBoxPaises_SelectionChanged"
                 BorderBrush="{x:Null}">
            <ListBox.Background>
                <SolidColorBrush Color="White" />
            </ListBox.Background>
            <!--LIST ITEMS TEMPLATE-->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,10">

                        <Image Source="{Binding Flags.Png}"
                               Width="50"
                               Height="30" />

                        <TextBlock Text="{Binding Name.Common}"
                                   Width="200"
                                   Padding="10,0,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   TextWrapping="Wrap" />

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!--END COLUMN COUNTRY LIST-->

        <!--COLUMN COUNTRY DATA-->
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <!--COLUMN HEADER: NAME AND FLAG-->
            <Grid Grid.Row="0" Margin="20,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <!--NAME-->
                <TextBlock x:Name="txtCountryName"
                           Grid.Column="0"
                           Grid.Row="0"
                           FontSize="32"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left" />

                <!--FLAG-->
                <Border Grid.Row="0"
                        Grid.Column="1"
                        BorderBrush="#eee"
                        BorderThickness="1"
                        HorizontalAlignment="Right">

                    <Image x:Name="imgCountryFlag"
                           Width="auto"
                           Height="150"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right" />

                </Border>

                <Border Grid.Row="1"
                        Grid.ColumnSpan="2"
                        BorderBrush="#eee"
                        BorderThickness="0, 0, 0, 1"
                        Margin="0, 20, 0, 10" />
            </Grid>
            <!--END NAME OF COUNTRY AND FLAG-->

            <!--COUNTRY DATA-->
            <WrapPanel Grid.Row="2" Grid.ColumnSpan="2">

                <!--CARD: NAMES-->
                <Border BorderBrush="AliceBlue"
                        BorderThickness="1"
                        CornerRadius="10"
                        Background="White"
                        Margin="20,10,0,10"
                        HorizontalAlignment="Left">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="2"
                                          Opacity="0.2"
                                          ShadowDepth="2"
                                          Direction="270" />
                    </Border.Effect>

                    <!--DATA-->
                    <StackPanel
                        Margin="20,10,20,10">

                        <!--TITLE-->
                        <TextBlock Margin="0,10,0,10"
                                   Text="Names"
                                   FontSize="22" />

                        <!--OFFICIAL NAME-->
                        <StackPanel Margin="0,5,0,5"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">

                            <TextBlock Text="Official"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       MinWidth="130" />

                            <TextBlock x:Name="txtNameOfficial"
                                       FontSize="14"
                                       MinWidth="100"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <!--COMMON NAME-->
                        <StackPanel Margin="0,5,0,5"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">

                            <TextBlock Text="Common"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       MinWidth="130" />

                            <TextBlock x:Name="txtNameCommon"
                                       FontSize="14"
                                       MinWidth="100"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <!--NATIVE OFFICIAL NAME-->
                        <StackPanel Margin="0,5,0,5"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">

                            <TextBlock Text="Official (Native)"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       MinWidth="130" />

                            <TextBlock x:Name="txtNameNativeOfficial"
                                       FontSize="14"
                                       MinWidth="100"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <!--NATIVE COMMON NAME-->
                        <StackPanel Margin="0,5,0,5"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">

                            <TextBlock Text="Common (Native)"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       MinWidth="130" />

                            <TextBlock x:Name="txtNameNativeCommon"
                                       FontSize="14"
                                       MinWidth="100"
                                       TextWrapping="Wrap" />

                        </StackPanel>
                    </StackPanel>
                </Border>
                <!--END CARD: NAMES-->

                <!--CARD: GEOGRAPHY-->
                <Border BorderBrush="AliceBlue"
                        BorderThickness="1"
                        CornerRadius="10"
                        Background="White"
                        Margin="20,10,0,10"
                        HorizontalAlignment="Right">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="2"
                                          Opacity="0.2"
                                          ShadowDepth="2"
                                          Direction="270" />
                    </Border.Effect>

                    <!--DATA-->
                    <StackPanel Margin="20,10,20,10">

                        <!--TITLE-->
                        <TextBlock Margin="0,10,0,10"
                                   Text="Geography"
                                   FontSize="22" />

                        <!--CONTINENT-->
                        <StackPanel Margin="0,5,0,5"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">
                            <TextBlock Text="Continent"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       MinWidth="130" />
                            <TextBlock x:Name="txtContinent"
                                       FontSize="14"
                                       MinWidth="100"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <!--REGION-->
                        <StackPanel Margin="0,5,0,5"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">
                            <TextBlock Text="Region"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       MinWidth="130" />
                            <TextBlock x:Name="txtRegion"
                                       FontSize="14"
                                       MinWidth="100"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <!--SUBREGION-->
                        <StackPanel Margin="0,5,0,5"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">
                            <TextBlock Text="Subregion"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       MinWidth="130" />
                            <TextBlock x:Name="txtSubregion"
                                       FontSize="14"
                                       MinWidth="100"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <!--CAPITAL-->
                        <StackPanel Margin="0,5,0,5"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">
                            <TextBlock Text="Capital"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       MinWidth="130" />
                            <TextBlock x:Name="txtCapital"
                                       FontSize="14"
                                       MinWidth="100"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <!--LATITUDE LONGITUDE-->
                        <StackPanel Margin="0,5,0,5"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">
                            <TextBlock Text="Lat/Lng"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       MinWidth="130" />
                            <TextBlock x:Name="txtLatLng"
                                       FontSize="14"
                                       MinWidth="100"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <!--TIMEZONES-->
                        <StackPanel Margin="0,5,0,5"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">
                            <TextBlock Text="Timezones"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       MinWidth="130" />
                            <TextBlock x:Name="txtTimezones"
                                       FontSize="14"
                                       MinWidth="100"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <!--LAND BORDERS-->
                        <StackPanel Margin="0,5,0,5"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">
                            <TextBlock Text="Land Borders"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       MinWidth="130" />
                            <TextBlock x:Name="txtBorders"
                                       FontSize="14"
                                       MinWidth="100"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                    </StackPanel>
                </Border>
                <!--END CARD: GEOGRAPHY-->

                <!--CARD: MISCELLANEOUS-->
                <Border BorderBrush="AliceBlue"
                        BorderThickness="1"
                        CornerRadius="10"
                        Background="White"
                        Margin="20,10,0,10"
                        HorizontalAlignment="Right">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="2"
                                          Opacity="0.2"
                                          ShadowDepth="2"
                                          Direction="270" />
                    </Border.Effect>

                    <!--DATA-->
                    <StackPanel Margin="20,10,20,10">

                        <!--TITLE-->
                        <TextBlock Margin="0,10,0,10"
                                   Text="Miscellaneous"
                                   FontSize="22" />

                        <!--POPULATION-->
                        <StackPanel Margin="0,5,0,5"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">

                            <TextBlock Text="Population"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       MinWidth="130" />

                            <TextBlock x:Name="txtPopulation"
                                       FontSize="14"
                                       MinWidth="100"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <!--LANGUAGES-->
                        <StackPanel Margin="0,5,0,5"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">

                            <TextBlock Text="Languages"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       MinWidth="130" />

                            <TextBlock x:Name="txtLanguages"
                                       FontSize="14"
                                       MinWidth="100"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <!--CURRENCIES-->
                        <StackPanel Margin="0,5,0,5"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">

                            <TextBlock Text="Currencies"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       MinWidth="130" />

                            <TextBlock x:Name="txtCurrencies"
                                       FontSize="14"
                                       MinWidth="100"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <!--UNITED NATIONS MEMBER-->
                        <StackPanel Margin="0,5,0,5"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">

                            <TextBlock Text="UN Member"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       MinWidth="130" />

                            <Image x:Name="imgUnMember"
                                   Source="/Imagens/check.png"
                                   Height="20"
                                   MinWidth="50" HorizontalAlignment="Left" />
                        </StackPanel>

                        <!--GINI-->
                        <StackPanel Margin="0,5,0,5"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal">

                            <TextBlock Text="Gini"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       MinWidth="130" />

                            <TextBlock x:Name="txtGini"
                                       FontSize="14"
                                       MinWidth="100"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                    </StackPanel>
                </Border>
                <!--END CARD: MISCELLANEOUS-->

            </WrapPanel>

        </Grid>
        <!--END COLUMN COUNTRY DATA-->

    </Grid>
</Window>