                   HorizontalAlignment="Right"
                   Foreground="#FFD6D6D6" />


        <TextBlock x:Name="txtProgressStep"
                   Grid.Row="6"
                   Grid.Column="5"
                   Text="Text Progress Steps"
                   HorizontalAlignment="Right"
                   Foreground="#CC999999" />


        <!--#region MAIN COLUMN LEFT -->
