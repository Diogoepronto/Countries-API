                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel x:Name="listItem"
                                    Orientation="Horizontal"
                                    Margin="0,10,0,10">

                            <Image Source="{Binding Flags.FlagToDisplay}"
                                   Width="50"
                                   Height="30">
                                <Image.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="2" Opacity="0.5" />
                                </Image.Effect>
                            </Image>

                            <TextBlock Text="{Binding Name.Common}"
                                       Width="200"
                                       Padding="10,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       TextWrapping="Wrap" />

                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <!--#endregion-->

        </Grid>
