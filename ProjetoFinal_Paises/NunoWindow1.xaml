                                               TextWrapping="Wrap"
                                               Margin="0,5,0,5" />

                                    <!--LATITUDE LONGITUDE-->
                                    <TextBlock Grid.Row="4"
                                               Grid.Column="0"
                                               Text="Lat/Lng"
                                               FontWeight="Bold"
