            Grid.Row="1" Grid.RowSpan="5"
            Grid.Column="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--#region SEARCHBAR -->
            <Grid
                x:Name="gridSearchBar"
                Grid.Row="0"
                IsEnabled="False">

                <TextBox x:Name="searchBar"
                         VerticalAlignment="Center"
                         Margin="5,0,5,0"
                         Padding="10, 5, 10, 5"
                         TextChanged="searchBar_TextChanged"

                         Background="{x:Null}" TabIndex="1" />

                <Button x:Name="clearButton"
                        HorizontalAlignment="Right"
                        VerticalContentAlignment="Center"
                        Content="✖️"
                        Margin="0,0,30,0"
                        Width="20"
                        Height="20"
                        Style="{StaticResource ClearSearchButton}"
                        Visibility="Hidden"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        TabIndex="2"
                        Click="clearButton_Click" />

                <TextBlock IsHitTestVisible="False"
                           Text="Enter a country"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="16,0,0,0"
                           Foreground="LightCyan">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=searchBar}" Value="">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
            <!--#endregion-->


            <!--#region LIST COUNTRIES -->
            <ListBox x:Name="listBoxCountries"
                     Grid.Row="1"
                     Grid.Column="0"
